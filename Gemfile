source 'http://rubygems.org'

gem 'rails', '3.1.3'

group :development do
	gem 'sqlite3'
end

group :production do
	gem 'pg'
	gem 'newrelic_rpm'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'

gem 'will_paginate'
